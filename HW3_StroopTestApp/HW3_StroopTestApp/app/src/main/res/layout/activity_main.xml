<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/colorText"
        android:layout_width="381dp"
        android:layout_height="272dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="/ / /"
        android:includeFontPadding="false"
        android:textSize="60dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/redButton"
            android:layout_width="114dp"
            android:layout_height="225dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#E66868"
            android:onClick="clickRed"
            android:paddingRight="20dp"
            android:text="RED"
            android:textSize="24sp" />

        <Button
            android:id="@+id/greenButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#65D16A"
            android:onClick="clickGreen"
            android:text="GREEN"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/blueButton"
            android:layout_width="117dp"
            android:layout_height="225dp"
            android:layout_weight="1"
            android:backgroundTint="#29B6F6"
            android:onClick="clickBlue"
            android:text="BLUE"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="354dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Right"
            android:textSize="35dp" />

        <TextView
            android:layout_width="354dp"
            android:layout_height="98dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Wrong"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rightCount"
            android:layout_width="354dp"
            android:layout_height="141dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/wrongCount"
            android:layout_width="354dp"
            android:layout_height="144dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"
            android:textSize="50dp" />

    </LinearLayout>

</LinearLayout>

</ScrollView>